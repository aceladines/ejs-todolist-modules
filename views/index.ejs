<%- include('header') -%>

<div class="box" id="heading">
  <h1><%= date %></h1>
</div>

<div class="box">
  <% for (var i = 0; i < list.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= list[i] %></p>
  </div>
  <% } %>

  <form action="/" method="post" class="item">
    <input type="text" name="newTodo" placeholder="Add Todo List" autocomplete="off" />
    <button type="submit" name="list" value=<%= date %>>+</button>
  </form>
</div>

<%- include('footer') -%>
</body>

</html>